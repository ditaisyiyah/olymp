<%- include('../partials/header') %>

<div style="display: flex; justify-content: space-between; align-items: baseline;">
  <h2>Welcome, <%= name %> !</h2>
  <%- include('../partials/menu') %>
</div>

<br><br><br>

<div class="table-responsive">
  <table class="table table-striped align-middle" style="text-align: center;">
    <tr class=" table-dark">
      <th>No.</th>
      <th>Flag</th>
      <th>Country</th>
      <th>Player</th>
    </tr>
    <% data.forEach((el, i)=>{ %>
    <tr>
      <td><%= i+1 %></td>
      <td><img src="https://www.countryflags.io/<%= el.code %>/flat/24.png"></td>
      <td><%= el.name %></td>
      <td><%= el.Athletes.length %></td>
    </tr>
    <% }) %>
  </table>
</div>
    
    
