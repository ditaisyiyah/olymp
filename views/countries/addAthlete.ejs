<%- include('../partials/header') %>

<h2 style="text-align: center;">Add an Athlete</h2>
<br>
<form action="/countries/athletes/add" method="post">
  <div class="mb-3">
    <label class="form-label">First Name</label>
    <input type="text" name="first_name" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Last Name</label>
    <input type="text" name="last_name" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Gender</label>
    <select name="gender" class="form-select">
      <option value="" selected>Select</option>
      <option value="Female">Female</option>
      <option value="Male">Male</option>
    </select>
  </div>
  <div class="mb-3">
    <label class="form-label">Age</label>
    <input type="number" name="age" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Email Address</label>
    <input type="email" name="email" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Sport</label>
    <select name="SportId" class="form-select">
      <option value="" selected>Select</option>
      <% data.forEach(el=>{ %>
      <option value="<%= el.id %>"><%= el.name %></option>
      <% }) %>
    </select>
  </div>
  
  <div style="text-align: center;">
    <input  type="submit" value="ADD" class="btn btn-primary">
    <a href="/countries/athletes" class="btn btn-outline-primary" >BACK</a>
  </div>

</form>
<br>
<% errs.forEach(el=>{ %>
  <p style="text-align: center;"><%= el %></p>
<% }) %>

</body>
</html>